{
  "name": "itacorubi-kanban",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm kill && pnpm db:migrate && next dev -p 5800",
    "kill": "kill -9 $(lsof -ti :5800) || true",
    "build": "pnpm db:migrate && next build",
    "start": "next start -p 5800",
    "lint": "eslint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:delete": "rm -f test.db test.db-journal",
    "db:reset": "pnpm db:delete && pnpm db:migrate",
    "test:reset": "pnpm kill && pnpm db:delete",
    "test": "playwright test --config=playwright/playwright.config.ts",
    "test:ui": "playwright test --config=playwright/playwright.config.ts --ui",
    "test:debug": "playwright test --config=playwright/playwright.config.ts --debug",
    "test:codegen": "playwright codegen http://localhost:5800"
  },
  "dependencies": {
    "@dnd-kit/core": "6.3.1",
    "@dnd-kit/sortable": "10.0.0",
    "@dnd-kit/utilities": "3.2.2",
    "@libsql/client": "0.15.15",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-label": "2.1.4",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@tanstack/react-query": "5.90.12",
    "@tanstack/react-query-devtools": "5.91.1",
    "@tiptap/pm": "3.13.0",
    "@tiptap/react": "3.13.0",
    "@tiptap/starter-kit": "3.13.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "drizzle-orm": "0.45.1",
    "lucide-react": "0.561.0",
    "next": "16.0.10",
    "next-themes": "0.4.6",
    "react": "19.2.3",
    "react-day-picker": "9.12.0",
    "react-dom": "19.2.3",
    "sonner": "2.0.7",
    "tailwind-merge": "3.4.0",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "20.19.26",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "drizzle-kit": "0.31.8",
    "eslint": "9.39.2",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "4.1.18",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3"
  }
}
